<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="UNIVERSIDADPU" transaction-type="JTA">
    <jta-data-source>java:app/DBUNI</jta-data-source>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <class>CLASES_BD.Carrera</class>
    <class>CLASES_BD.Estudiante</class>
    <class>CLASES_BD.Sede</class>
    <properties>
        <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/UNIBD"/>
        <property name="javax.persistence.jdbc.password" value="super"/>
        <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
        <property name="javax.persistence.jdbc.user" value="super"/>
    </properties>
  </persistence-unit>
</persistence>
